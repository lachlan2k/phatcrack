{$HOST_NAME} {
    log

    # This technically allows any caddy entry to be added here
    # But we'll just use it for TLS
    {$TLS_OPTS}

    encode gzip

    handle /api/* {
        reverse_proxy http://api:3000
    }

    handle {
        root * /srv
        try_files {path} /index.html
		file_server
    }
}